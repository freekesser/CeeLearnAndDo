                    CeeLearnAndDo
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="">
                    <ul class="navbar-nav flex-grow-1 navbar-collapse collapse d-sm-inline-flex flex-sm-row mr-5">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Articles">Articles</a>
                        </li>

                        @if (user != null && user.Role == 2)
                        {
                            // Routes voor sitebeheerder
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Acounts">Beheer acounts</a>
                            </li>
                        }

                        @if (user != null && user.Role >= 1)
                        {
                            // Routes voor Medenwerker

                        }

                        @if (user != null)
                        {
                            // Routes voor Gebruikers
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Knowledgebase" asp-action="Index">Kennisbank</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                        @if (user == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Acount" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Acount" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div class="p-4">
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - CeeLearnAndDo
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
