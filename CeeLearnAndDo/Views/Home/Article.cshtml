@{
    ViewData["Title"] = "Show Article";

    Article article = (Article) ViewData["Article"];
    List<ArticleReply> articleReplies = (List<ArticleReply>) ViewData["ArticleReplies"];
    User user = (User)ViewData["User"];
}

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
    <script>CKEDITOR.replace("Editor");</script>
}

<div class="container">
    <h1 class="mt-2"> @article.Title </h1>
    <a asp-action="Articles"><-- Back</a>

    @if (user != null && user.Role > 0)
    {
        <div class="w-100 float-right" style="margin-top: -50px;">
            <form asp-action="Delete" asp-controller="Article" method="post" class="float-right ml-4">
                <input type="hidden" name="Id" value="@article.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    }

    <div class="row"><div class="col"><hr /></div></div>

    <div class="mt-4">@Html.Raw(article.Content)</div>

    <div class="row"><div class="col"><hr /></div></div>


    <div>
            <div class="mb-4">
                <h4>Replys:</h4>
                @if (user != null)
                {
                    <button class="btn btn-dark float-right" style="margin-top: -40px" onclick="ShowReplyForm()" id="ReplyButton">Reply</button>
                    <div class="d-none" id="ReplyDiv">
                        <form method="post" asp-action="Reply">
                            <input type="hidden" name="Id" value="@article.Id" />
                            <textarea name="Content" id="Editor"></textarea>
                            <input type="submit" class="btn btn-primary" value="Post Reply" />
                        </form>
                    </div>
                }
            </div>

            @if (articleReplies == null)
            {
                <p>No one has replyed yet.</p>
            }
            else
            {
                @foreach (ArticleReply articleReply in articleReplies)
                {
                    <div class="row"><div class="col"><hr /></div></div>
                    <div>
                        <div class="mb-2">
                            Replyd @articleReply.TimeSinceUpdate().
                        </div>
                        <div>
                            @Html.Raw(articleReply.Content)
                        </div>
                    </div>
                }
            }
        </div>
</div>
