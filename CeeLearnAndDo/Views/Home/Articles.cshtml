                <button type="submit" class="search__button"><i class="fa fa-search search__icon"></i></button>
            </form>
        </div>
    </div>
</div>

@if (user != null && user.Role > 0) { 
    <a class="btn btn-dark float-right text-white" style="position: absolute;top: 160px;right: 275px;" asp-action="Create" asp-controller="Article">Create Article</a>
}

<div class="container mt-6 artcontainer" style="margin-top:50px;">
    @foreach (Article article in Articles)
    {
        <div class="row align-items-center">
            <div class="col-9">
                <h4>@article.Title</h4>
                <p>@article.Description</p>
            </div>
            <div class="col-3">
                <a asp-action="Article" asp-route-id="@article.Id"><p class="text-right">Read more</p></a>
            </div>
        </div>
        <div class="row"><div class="col" style="margin-top: -10px;"><hr /></div></div>
    }
</div>

