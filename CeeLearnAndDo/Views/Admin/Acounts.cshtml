@{
    ViewData["Title"] = "Beheer Acounts";

    List<User> Users = (List<User>)ViewData["Users"];
}

@section Styles
{
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="AcountsContainer mt-4" >
    <div class="AcountsHeader">
        <div class="AcountsInfo">Account Management</div>
        <form method="post" asp-action="Acounts" asp-controller="Admin">
            @if (ViewData["Message"] != null)
            {
                <div class="AcountsMessage">
                    @ViewData["Message"]
                </div>
            }
            <input type="submit" name="submit" value="Search" class="AcountsSubmit" />
            <input type="text" name="search" placeholder="Search Email" class="AcountsSearch" />
        </form>
    </div>
    <div class="AcountsBody">
        <table class="table table-hover">
            <tr>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Active</th>
                <th scope="col" style="width: 150px;"></th>
                <th scope="col" style="width: 250px;">Change Role</th>
            </tr>
            @foreach (User user in Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.IsActive</td>
                    <td>
                        <a asp-action="ChangeActivation" asp-route-id="@user.Id">Change Active</a>
                    </td>
                    <td>
                        <a asp-action="ChangeRoleDown" asp-route-id="@user.Id" class="mr-2">One role down</a>
                        <a asp-action="ChangeRoleUp" asp-route-id="@user.Id">One role up</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>